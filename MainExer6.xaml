<Window x:Class="InterficieBasica.MainExer6"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InterficieBasica"
        mc:Ignorable="d"
        Title="MainExer6" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Label Content="Nom:" Grid.Row="0" Grid.Column="0" Margin="5"/>
        <TextBox Name="NomTextBox" Grid.Row="0" Grid.Column="1" Margin="5"/>
        <Label Content="Adreça:" Grid.Row="1" Grid.Column="0" Margin="5"/>
        <TextBox Name="AdreçaTextBox" Grid.Row="1" Grid.Column="1" Margin="5,10,0,150"/>

        <StackPanel Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" Margin="10">
            <Button Content="Enviar" Width="100" Height="30" Margin="0,250,0,0"/>
            <Button Content="Cancel.lar" Width="100" Height="30" Margin="0,20,0,0"/>
        </StackPanel>
    </Grid>
</Window>
